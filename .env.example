# ===== CORE SETTINGS =====
DEBUG=True
SECRET_KEY=your-secret-key-change-me-in-production

# ===== DATABASE =====
# SQLite (default for development)
DATABASE_URL=sqlite:///./ecoci.db

# PostgreSQL (uncomment for production)
# POSTGRES_SERVER=localhost
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-password
# POSTGRES_DB=ecoci
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}/${POSTGRES_DB}

# ===== GITHUB INTEGRATION =====
# Required for MCP
GITHUB_APP_ID=your-github-app-id
GITHUB_APP_PRIVATE_KEY=your-github-private-key

# Webhook settings (only needed in production)
# GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
# WEBHOOK_URL=https://your-domain.com/api/webhooks/github

# Development mode (set to False in production)
DEVELOPMENT_MODE=True

# ===== MCP SERVER =====
MCP_SERVER_ENABLED=True
MCP_MAX_CONCURRENT_REQUESTS=10

# ===== SLACK INTEGRATION =====
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_SIGNING_SECRET=your-slack-signing-secret

# ===== CORS =====
CORS_ORIGINS=*

# ===== RATE LIMITING =====
# RATE_LIMIT_PER_MINUTE=60

# ===== EXTERNAL SERVICES =====
# OPENAI_API_KEY=your-openai-api-key

# ===== FEATURE FLAGS =====
# ENABLE_ANALYTICS=False
